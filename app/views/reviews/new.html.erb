<h1 id="new-review-heading">Add a Review</h1>
<form id="new-review-form" action="/reviews" method="post">
  <h2><%= @book.title %></h2>
  <label for="title">
    <h3>Title</h3>
  </label>
  <input id="title" type="text" name="review[:title]" placeholder="Title" required>
  <label for="user">
    <h3>User</h3>
  </label>
  <input id="user" type="text" name="review[:user_id]" placeholder="User" required>
  <label for="rating">
    <h3>Rating</h3>
  </label>
  <input id="rating" type="text" name="review[:Rating]" placeholder="Rating" required>
  <label for="review">
    <h3>Review</h3>
  </label>
  <input id="review" type="textarea" name="review[:review]" placeholder="Review" required>
  <input type="hidden" name="review[:book_id]" value="<%= @book.id %>">
  <input type="submit" value="submit">
</form>