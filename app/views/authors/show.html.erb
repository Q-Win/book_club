<header id="author-heading">
  <h1><%= @author.name %></h1>
  <div class="delete-button">
    <%= button_to 'Delete Author', @author, :method => 'delete' %>
  </div>
</header>
<main id="author-books-container">
  <h2>All Books by <%= @author.name%></h2>
  <% @books.each do |book| %>
    <article>
      <h2 class="author-book-info-book-title"> Title: <%= book.title %></h2>
      <div >
        <ul class="author-book-info">
          <li>Average Rating: <%= book.average_rating %></li>
          <li>Other Authors: <% book.other_authors(@author.id).each do |author| %>
            <span><%= author %></span>
            <% end %>
          </li>
          <li><%= book.page_count %> pages</li>
          <li>Published in <%= book.year_published %></li>
        </ul>
      </div>
      <div class="author-book-top-review">
        <h3>Review from <%= book.top_review.user.name %></h3>
        <h3>Rating: <%= book.top_review.rating %></h3>
        <h3><%= book.top_review.title %></h3>
        <p><%= book.top_review.review %></p>
      </div>
    </article>
  <% end %>
</main>
